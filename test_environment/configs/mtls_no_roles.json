{
  "server": {
    "host": "127.0.0.1",
    "port": 20004
  },
  "ssl": {
    "enabled": true,
    "cert_file": "certs/localhost_server.crt",
    "key_file": "keys/localhost_server.key",
    "ca_cert": "certs/mcp_proxy_adapter_ca_ca.crt",
    "verify_client": true,
    "client_cert_required": true
  },
  "security": {
    "enabled": true,
    "auth": {
      "enabled": true,
      "methods": [
        "certificate"
      ]
    },
    "permissions": {
      "enabled": false
    }
  },
  "registration": {
    "enabled": false
  },
  "protocols": {
    "enabled": true,
    "allowed_protocols": [
      "https",
      "mtls"
    ]
  }
}